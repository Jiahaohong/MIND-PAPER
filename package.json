{
  "name": "mindpaper",
  "private": true,
  "version": "0.1.1",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "pack": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^7.7.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mindpaper.local",
    "productName": "MIND PAPER",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "assets/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "icon": "assets/mindpaper.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "identity": null,
      "hardenedRuntime": false
    }
  }
}
