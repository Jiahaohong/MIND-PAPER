{
  "name": "mind-paper",
  "private": true,
  "version": "1.3.1",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:3001 && electron .\"",
    "electron": "electron .",
    "build": "vite build",
    "preview": "vite preview",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.mindpaper.app",
    "productName": "Mind Paper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "icon": "assets/mind-paper-v2.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "icon": "assets/mind-paper-v2.ico",
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "dependencies": {
    "pdfjs-dist": "4.8.69",
    "react-dom": "^19.2.4",
    "d3": "^7.9.0",
    "react": "^19.2.4",
    "react-pdf": "^9.2.1",
    "@google/genai": "^1.38.0",
    "lucide-react": "^0.563.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.0"
  }
}
